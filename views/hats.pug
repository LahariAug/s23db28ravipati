extends layout

block content
  h1 Details of Hats 
  - 
    let results = [{hat_name: 'Fedora', hat_color: 'White', hat_cost: 200 }, {hat_name: 'Cowboy', hat_color: 'Red', hat_cost: 400 }, { hat_name: 'Boater', hat_color: 'Black', hat_cost: 500 }]
 
  div(class = "container-fluid")
    div(class = "row")
      each item,index in results
        div(class = "col-sm-2" onclick = `buy (${index})`) Name: #{item.hat_name}
        div(class = "col-sm-2" onclick = `buy (${index})`) Color: #{item.hat_color}
        div(class = "col-sm-2" onclick = `buy (${index})`) Cost: $#{item.hat_cost}
        br
        br
 
  script.
    function buy(itemNum){
      alert(`You purchased item ${itemNum+1}`)
    }