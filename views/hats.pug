extends layout
block content
  h1 Details of Hats 
  - let des = `dispatch(\"/hats/create\")`
  button.btn( class="btn-danger ml-1" onclick= des) Create
  -
    let items = results
  div(class="container-fluid")
    div(class="col m-1")
      each item in items
        - let destination = `dispatch(\"/hats/update?id=${item._id}\")`
        - let destination1 = `dispatch(\"/hats/detail?id=${item._id}\")`
        - let destination2 = `dispatch(\"/hats/delete?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.hat_name}(#{item.hat_color}) is #{item.hat_cost}
        button.btn( class="btn-danger ml-1", onclick= destination) Update
        button.btn( class="btn-danger ml-1", onclick= destination1) Details
        button.btn( class="btn-danger ml-1", onclick= destination2) Delete
  script.
    function dispatch(path){
      window.location.href=path
    }