extends layout
block content
  h1 Details of Hats 
  -
    let items = results
  div(class = "container-fluid")
    div(class = "row")
      each item,index in items
        div(class = "col-sm-2" onclick = `buy (${index})`) Name: #{item.hat_name}
        div(class = "col-sm-2" onclick = `buy (${index})`) Color: #{item.hat_color}
        div(class = "col-sm-2" onclick = `buy (${index})`) Cost: $#{item.hat_cost}
        br
        br
 
  script.
    function buy(itemNum){
      alert(`You purchased item ${itemNum+1}`)
    }